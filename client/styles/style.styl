@import '_normalize.styl'
@import '_typography.styl'



body
  background url(https://images.pexels.com/photos/1565982/pexels-photo-1565982.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260) center no-repeat
  background-size: cover;

.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 4px solid #1ccecb
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.grid-photo
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none
  max-height 184px

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color black

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color #1ccecb
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.comment-form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical


.grid-photo-wrap
  position relative
  
.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size .3rem
  padding .3rem
  position absolute
  color #1ccecb
  left 50%
  top 50%
  pointer-events none
  

/*  
  Buttons  
*/

.purchase-buttons
  display flex
  justify-content center

.nav-buttons, .buttonNav
  display flex
  justify-content flex-end
  list-style none
  background none
  flex-basis 75%
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 2.5rem
  color #1ccecb
  transition all 0.2s
  box-sizing padding-box
  margin 2px
  &:hover, &:focus
    color darkgray
    outline 0
  
#login 
  
  border none
   &:hover, &:focus
    border-color #1ccecb
    color darkgray
    outline 0

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 75%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color #1ccecb
  transition all 0.2s
  box-sizing padding-box
  margin 2px
  &:hover, &:focus
    border-color #1ccecb
    outline 0

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background#1ccecb
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent#1ccecb transparent transparent
    top 30%
    left 0


.split-page 
  display: flex;
  height: 100vh;
  max-width: auto;
  margin: 0;

.split-page > * 
  flex: 1 9 auto;
  padding: 2rem;
  border: 1rem solid#1ccecb;
  position: relative;
  overflow: scroll;
  margin: 0;



